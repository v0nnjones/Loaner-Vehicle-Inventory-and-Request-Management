        <script><![CDATA[(function executeRule(current, previous /*null when async*/ ) {


    var vehicleStatus = current.vehicle_status; // variable for 'vehicle status' on tracking table
    var gr = new GlideRecord('x_1220299_lva_loaner_vehicle_catalog'); //GR variable for Catalog table

    gr.addQuery('sys_id',current.vehicle); // Query the sys id of the vehicle field in the tracker table
    gr.query();
    if (gr.next()) {

        if (vehicleStatus == 'Sent for Servicing'||
            vehicleStatus == 'Out on Field'||
            vehicleStatus == 'Returned for Inspection'||
            vehicleStatus == 'Pending Release'){

				gr.setValue('status','Unavailable');
		
			}
		else
		if(vehicleStatus=='Returned to Warehouse'){
			gr.setValue('status','Available');
		}
		else
		if(vehicleStatus=='Decommissioned'){
			gr.setValue('status','Decommissioned');

		}
		gr.update();
    }




})(current, previous);]]></script>
